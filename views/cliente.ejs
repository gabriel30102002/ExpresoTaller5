<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Taller 5</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- DataTables CSS -->
    <link href="style.css" rel="stylesheet">

</head>
<body>
    <!-- Header -->
    <header class="bg-primary text-white text-center py-3 mb-4">
        <h1>Taller 5</h1>
    </header>


<main class="col-md-8 ms-sm-auto col-lg-10 px-md-4">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-5">
                        <h2><%= title %></h2>
                    </div>
                    <div class="col-sm-7">
                        <a href="http://localhost:3000/cliente/findAllById/1/view" class="btn btn-secondary"><i class="material-icons">&#xE147;</i> <span>Filtrar cliente</span></a>
                    </div>
                </div>
            </div>

            <table id="clientesTable" class="table table-striped table-hover" style="width:100%">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Servicio</th>
                        <th>Acci√≥n</th>
                    </tr>
                </thead>
                <tbody>
                    <% arrClientes.forEach((cliente) => { %>
                        <tr>
                            <td><%= cliente.id %></td>
                            <td><%= cliente.nombre %></td>   
                            <td><%= cliente.apellido %></td>
                            <td>
                              <% cliente.servicios.forEach(servicio => { %>
                                <%= servicio.descripcion %><br>
                              <% }); %>
                            </td>
                            <td>
                                <a href="#" class="search" title="Search" data-toggle="tooltip"><i class="material-icons">&#xE8B6;</i></a>
                                <a href="#" class="delete" title="Delete" data-toggle="tooltip"><i class="material-icons">&#xE5C9;</i></a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
                
            <div class="clearfix">
                <div class="hint-text">Showing <b>5</b> out of <b>25</b></div>
                <ul class="pagination">
                    <li class="page-item disabled"><a href="#">Previous</a></li>
                    <li class="page-item"><a href="#" class="page-link">1</a></li>
                    <li class="page-item"><a href="#" class="page-link">2</a></li>
                    <li class="page-item active"><a href="#" class="page-link">3</a></li>
                    <li class="page-item"><a href="#" class="page-link">4</a></li>
                    <li class="page-item"><a href="#" class="page-link">5</a></li>
                    <li class="page-item"><a href="#" class="page-link">Next</a></li>
                </ul>
            </div>
        </div>
    </div>
</main>
  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <!-- Bootstrap JS -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <!-- DataTables JS -->
  <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
  <script>
      $(document).ready(function() {
          $('#example').DataTable();
      });
  </script>
</body>
</html>